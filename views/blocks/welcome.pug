.content__body-welcome
	.content__auth
		//- a(href="auth.html")
		svg.auth__icon 
			use(href="#user")
	.welcome__photo
		img(src="./img/avatar.jpg", alt="").welcome__photo-img
	.welcome__name #{autor}
	.welcome__desc #{desc}
	.welcome__socials
		ul.socials
			each name, link in {'https://www.facebook.com/ivanxolod': 'fb', 'https://github.com/IvanKholodP': 'github', 'https://www.linkedin.com/in/ivan-kholod-7b4611164/': 'in'}
				li.socials__item
					a(href=`${link}` target="_blank").socials__link
						svg.socials__icon
							use(href=`#${name}`)
	.welcome__menu
		ul.nav-menu
			each name, link in {'works.html': 'Мої роботи', 'about': 'Про мне', 'blog.html': 'Блог'}
				li.nav-menu__list
					a(href=`${link}`).nav-menu__link=name