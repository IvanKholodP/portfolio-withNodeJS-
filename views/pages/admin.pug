extends ../layout.pug 

block content
		.admin_wrapper
			main.admin_content
				header.header_admin 
					.admin_title Панель адміністрування
					.admin_backHome
						a(href="/") Повернутися на сайт 
				section.content_tabs
					.tabs_menu
						.tabs_menu-item._admin_active(data-tab-name="tab-1") Про мене
						.tabs_menu-item(data-tab-name="tab-2") Блог
						.tabs_menu-item(data-tab-name="tab-3") Мої роботи
					.tabs_content 
						.admin_img
							img(src="./img/admin.jpg", alt="")
						.tab.tab-1._admin_active 
							each index in skill
								form#admin-about-me.admin-form.admin-about-me
									fieldset.admin-about-me-box Frontend
										label.admin-about-me-label HTML5
											input(name="html5" type="number" maxlength="3"  value=`${index.html5}`)
										label.admin-about-me-label CSS3
											input(name="css3" type="number" maxlength="3"  value=`${index.css3}`)
										label.admin-about-me-label JavaScript
											input(name="js" type="number" maxlength="3"  value=`${index.js}`)
										label.admin-about-me-label SASS
											input(name="sass" type="number" maxlength="3"  value=`${index.sass}`)
									fieldset.admin-about-me-box Backend
										label.admin-about-me-label mySQL
											input(name="sql" type="number" maxlength="3"  value=`${index.sql}`)
										label.admin-about-me-label Node.js and npm
											input(name="node" type="number" maxlength="3"  value=`${index.node}`)
										label.admin-about-me-label Mongo.db
											input(name="mongo" type="number" maxlength="3"  value=`${index.mongo}`)
									fieldset.admin-about-me-box Workflow
										label.admin-about-me-label Git
											input(name="git" type="number" maxlength="3"  value=`${index.git}`)
										label.admin-about-me-label Webpack
											input(name="webpack" type="number" maxlength="3"  value=`${index.webpack}`)
										label.admin-about-me-label Avocode
											input(name="avocode" type="number" maxlength="3"  value=`${index.avocode}`)
										label.admin-about-me-label REST API
											input(name="rest" type="number" maxlength="3"  value=`${index.rest}`)
									.admin_save_button
										.status 
										input(name="" type="submit" value="Добавити")
						.tab.tab-2 
							form#admin-blog(action ="" method="POST").admin-form.admin-blog
								p Добавити запис
								.status 
								input(name="list" type="number" placeholder="Номер статті")#admin-blog__article-list
								input(name="title" type="text" placeholder="Назва")#admin-blog__article-title
								input(name="date" type="text" placeholder="Дата")#admin-blog__article-data
								textarea(name="text" rows="8" cols="50" placeholder="Зміст")#admin-blog__article-content
								.admin_save_button
									input(name="" type="submit" value="Добавити")
						.tab.tab-3
							form#admin-works.admin-form.admin-works
								p Добавити Роботу
								input(type="text" placeholder="Назва проекта")#admin-works__project-title
								input(type="text" placeholder="Технології")#admin-works__project-technologies
								input(type="text" placeholder="Посилання")#admin-works__project-link
								p
									label.admin-works__project-select-image Вибрати зображення
									input(type="file")#admin-works__project-select-image
							.admin_save_button 
								span#admin-works__save Добавити